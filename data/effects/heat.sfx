texture framebuffer = {FRAMEBUFFER}
vec3 col_scale = vec3(1.0,1.0,1.0)
texture noisesrc = ../data/textures/noise.png
vec2 randomUV = {RANDOM}

effect
{
	vec2 inc = _in;
	vec2 rgnoise = noisesrc(randomUV-vec2(0.5,0.5)+inc).rg;
	inc.xy += rgnoise * (length(col_scale)) * 0.0005;

	vec4 pixel = framebuffer(inc);	

	_out.rgb = pixel.rgb * vec3(1.0-col_scale[2]-col_scale[1],1.0-col_scale[0]-col_scale[2],1.0-col_scale[0]-col_scale[1]);
	_out.a = 1.0;
}

