texture framebuffer
float2 cur

effect
{
	// XXX compilation fails if these statements are put on one line, SFML what do you do?
	vec4 pixel = framebuffer(_in);
	vec4 another = framebuffer(_in+vec2(-1.0,0.0));

	float scale =  saturate((length(_in-cur))*1);
	float4 color = (pixel*1.0f+(another*0.2));

	_out.rgb = mix(color.rgb,float3(length(color.rgb)),scale) * saturate(1.f-scale+0.3);
	_out.a = 1.f;
}

